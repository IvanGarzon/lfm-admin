{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true,
    "target": "ES2023",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,
    /* Bundled projects */
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "noEmit": true,
    //"module": "Preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/env": [
        "./env.ts"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@/prisma/*": [
        "./prisma/generated/*"
      ],
      "@/zod/*": [
        "./prisma/zod/*"
      ],
      "@/repo/*": [
        "./prisma/prisma-vault/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "next-themes/dist/types": [
        "node_modules/next-themes"
      ]
    },
    "types": [
      "next",
      "react",
      "google.maps"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    ".next/types/**/*.ts",
    "src/components/shared/tailwind.config.Js",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
